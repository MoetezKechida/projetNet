@model IEnumerable<Review>

@{
    ViewData["Title"] = "Reviews";
}

<div class="container mt-4">
    <h1>Reviews</h1>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    @if (ViewBag.TargetId != null)
    {
        <div class="alert alert-info">
            <strong>Viewing reviews for Target ID:</strong> @ViewBag.TargetId
            @if (ViewBag.AverageRating != null)
            {
                <span class="ms-3"><strong>Average Rating:</strong> @string.Format("{0:0.0}", ViewBag.AverageRating) / 5</span>
            }
        </div>
    }

    @if (ViewBag.ReviewerId != null)
    {
        <div class="alert alert-info">
            <strong>Viewing reviews by Reviewer ID:</strong> @ViewBag.ReviewerId
        </div>
    }

    <p>
        <a asp-action="Create" class="btn btn-primary">Create New Review</a>
    </p>

    @if (Model.Any())
    {
        <div class="table-responsive">
            <table class="table table-striped table-hover">
                <thead class="table-dark">
                    <tr>
                        <th>Rating</th>
                        <th>Comment</th>
                        <th>Reviewer ID</th>
                        <th>Target ID</th>
                        <th>Created At</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                <span class="badge bg-warning text-dark">
                                    @for (int i = 0; i < item.Rating; i++)
                                    {
                                        <span>★</span>
                                    }
                                    @for (int i = item.Rating; i < 5; i++)
                                    {
                                        <span>☆</span>
                                    }
                                    @item.Rating/5
                                </span>
                            </td>
                            <td>
                                @if (item.Comment.Length > 100)
                                {
                                    @item.Comment.Substring(0, 100)<text>...</text>
                                }
                                else
                                {
                                    @item.Comment
                                }
                            </td>
                            <td>
                                <small class="text-muted">@item.ReviewerId.Substring(0, Math.Min(8, item.ReviewerId.Length))...</small>
                            </td>
                            <td>
                                <small class="text-muted">@item.TargetId.Substring(0, Math.Min(8, item.TargetId.Length))...</small>
                            </td>
                            <td>
                                @item.CreatedAt.ToString("MMM dd, yyyy")
                            </td>
                            <td>
                                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info">Details</a>
                                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning">Edit</a>
                                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">Delete</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
    else
    {
        <div class="alert alert-info">
            <p class="mb-0">No reviews found. <a asp-action="Create">Create the first review</a>.</p>
        </div>
    }
</div>
