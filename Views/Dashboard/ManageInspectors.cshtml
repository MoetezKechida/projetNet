@model IEnumerable<projetNet.Models.ApplicationUser>
@{
    ViewData["Title"] = "Manage Inspectors";
}
<h2>Manage Inspectors</h2>
<a asp-action="CreateInspector" class="btn btn-success mb-2">Add Inspector</a>
<table class="table table-bordered">
    <thead>
        <tr>
            <th>Email</th>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var inspector in Model)
        {
            <tr>
                <td>@inspector.Email</td>
                <td>@inspector.FirstName</td>
                <td>@inspector.LastName</td>
                <td>
                    <a asp-action="EditInspector" asp-route-id="@inspector.Id" class="btn btn-warning btn-sm">Edit</a>
                    <a asp-action="DeleteInspector" asp-route-id="@inspector.Id" class="btn btn-danger btn-sm">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>