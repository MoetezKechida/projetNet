@model projetNet.Models.ApplicationUser
@{
    ViewData["Title"] = "Delete Inspector";
}
<h2>Delete Inspector</h2>
<div class="alert alert-danger">Are you sure you want to delete this inspector?</div>
<form asp-action="DeleteInspector" method="post">
    <input type="hidden" asp-for="Id" />
    <div class="mb-3">
        <label>Email</label>
        <input asp-for="Email" class="form-control" disabled />
    </div>
    <div class="mb-3">
        <label>First Name</label>
        <input asp-for="FirstName" class="form-control" disabled />
    </div>
    <div class="mb-3">
        <label>Last Name</label>
        <input asp-for="LastName" class="form-control" disabled />
    </div>
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="ManageInspectors" class="btn btn-secondary">Cancel</a>
</form>
