@model IEnumerable<projetNet.DTOs.Vehicle.VehicleResponse>

@{
    ViewData["Title"] = "Vehicle Marketplace";
}

<div class="container-fluid">
    <!-- Hero Section -->
    <div class="row bg-primary text-white py-5 mb-4">
        <div class="col-12 text-center">
            <h1 class="display-4 fw-bold">Find Your Perfect Vehicle</h1>
            <p class="lead">Browse thousands of quality vehicles from verified sellers</p>
        </div>
    </div>

    <div class="row">
        <!-- Filters Sidebar -->
        <div class="col-lg-3 col-md-4 mb-4">
            <div class="card shadow-sm">
                <div class="card-header bg-white">
                    <h5 class="mb-0"><i class="bi bi-funnel"></i> Filters</h5>
                </div>
                <div class="card-body">
                    <form id="filterForm" method="get" asp-action="Search">
                        <!-- Search Query -->
                        <div class="mb-3">
                            <label for="searchQuery" class="form-label">Search</label>
                            <input type="text" class="form-control" id="searchQuery" name="brand" 
                                   placeholder="Enter brand, model...">
                        </div>

                        <!-- Price Range -->
                        <div class="mb-3">
                            <label class="form-label">Price Range</label>
                            <div class="row g-2">
                                <div class="col-6">
                                    <input type="number" class="form-control form-control-sm" 
                                           name="minPrice" placeholder="Min" min="0">
                                </div>
                                <div class="col-6">
                                    <input type="number" class="form-control form-control-sm" 
                                           name="maxPrice" placeholder="Max" min="0">
                                </div>
                            </div>
                        </div>

                        <!-- Year Range -->
                        <div class="mb-3">
                            <label class="form-label">Year</label>
                            <div class="row g-2">
                                <div class="col-6">
                                    <input type="number" class="form-control form-control-sm" 
                                           name="minYear" placeholder="From" min="1900">
                                </div>
                                <div class="col-6">
                                    <input type="number" class="form-control form-control-sm" 
                                           name="maxYear" placeholder="To" max="2027">
                                </div>
                            </div>
                        </div>

                        <!-- Mileage Range -->
                        <div class="mb-3">
                            <label class="form-label">Mileage (km)</label>
                            <div class="row g-2">
                                <div class="col-6">
                                    <input type="number" class="form-control form-control-sm" 
                                           name="minMileage" placeholder="Min" min="0">
                                </div>
                                <div class="col-6">
                                    <input type="number" class="form-control form-control-sm" 
                                           name="maxMileage" placeholder="Max" min="0">
                                </div>
                            </div>
                        </div>

                        <!-- Location -->
                        <div class="mb-3">
                            <label for="location" class="form-label">Location</label>
                            <input type="text" class="form-control" id="location" name="location" 
                                   placeholder="City, Region...">
                        </div>

                        <!-- Sort By -->
                        <div class="mb-3">
                            <label for="sortBy" class="form-label">Sort By</label>
                            <select class="form-select" id="sortBy" name="sortBy">
                                <option value="newest">Newest First</option>
                                <option value="price_low">Price: Low to High</option>
                                <option value="price_high">Price: High to Low</option>
                                <option value="mileage_low">Mileage: Low to High</option>
                                <option value="year_new">Year: Newest</option>
                            </select>
                        </div>

                        <button type="submit" class="btn btn-primary w-100 mb-2">
                            <i class="bi bi-search"></i> Apply Filters
                        </button>
                        <button type="reset" class="btn btn-outline-secondary w-100">
                            <i class="bi bi-x-circle"></i> Clear
                        </button>
                    </form>
                </div>
            </div>
        </div>

        <!-- Vehicle Listings -->
        <div class="col-lg-9 col-md-8">
            <!-- Results Header -->
            <div class="d-flex justify-content-between align-items-center mb-3">
                <h4 class="mb-0">@Model.Count() Vehicles Found</h4>
                <a asp-action="Create" class="btn btn-success">
                    <i class="bi bi-plus-circle"></i> List Your Vehicle
                </a>
            </div>

            <!-- Vehicle Grid -->
            <div class="row g-4">
                @foreach (var vehicle in Model)
                {
                    <div class="col-lg-4 col-md-6 col-sm-12">
                        <div class="card h-100 shadow-sm hover-shadow transition">
                            <!-- Vehicle Image -->
                            <div class="position-relative overflow-hidden" style="height: 200px;">
                                @if (!string.IsNullOrEmpty(vehicle.ImageUrl))
                                {
                                    <img src="@vehicle.ImageUrl" class="card-img-top h-100 object-fit-cover" 
                                         alt="@vehicle.Brand @vehicle.Model">
                                }
                                else
                                {
                                    <div class="bg-secondary d-flex align-items-center justify-content-center h-100">
                                        <i class="bi bi-car-front text-white" style="font-size: 3rem;"></i>
                                    </div>
                                }
                                
                                <!-- Badge -->
                                <span class="position-absolute top-0 end-0 m-2 badge bg-primary">
                                    @vehicle.Year
                                </span>
                            </div>

                            <div class="card-body d-flex flex-column">
                                <!-- Title -->
                                <h5 class="card-title mb-2">
                                    <a asp-action="Details" asp-route-id="@vehicle.Id" 
                                       class="text-decoration-none text-dark">
                                        @vehicle.Brand @vehicle.Model
                                    </a>
                                </h5>

                                <!-- Price -->
                                <h4 class="text-primary mb-2">
                                    $@vehicle.Price.ToString("N0")
                                </h4>

                                <!-- Details -->
                                <div class="mb-3">
                                    <div class="d-flex justify-content-between text-muted small mb-1">
                                        <span><i class="bi bi-speedometer2"></i> @vehicle.Mileage.ToString("N0") km</span>
                                        <span><i class="bi bi-geo-alt"></i> @vehicle.Location</span>
                                    </div>
                                    @if (!string.IsNullOrEmpty(vehicle.Vin))
                                    {
                                        <div class="text-muted small">
                                            <i class="bi bi-credit-card-2-front"></i> VIN: @vehicle.Vin.Substring(0, Math.Min(10, vehicle.Vin.Length))...
                                        </div>
                                    }
                                </div>

                                <!-- Description Preview -->
                                <p class="card-text text-muted small flex-grow-1">
                                    @if (!string.IsNullOrEmpty(vehicle.Description))
                                    {
                                        @(vehicle.Description.Length > 100 
                                            ? vehicle.Description.Substring(0, 100) + "..." 
                                            : vehicle.Description)
                                    }
                                </p>

                                <!-- Action Buttons -->
                                <div class="mt-auto">
                                    <a asp-action="Details" asp-route-id="@vehicle.Id" 
                                       class="btn btn-primary w-100">
                                        <i class="bi bi-eye"></i> View Details
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                }

                @if (!Model.Any())
                {
                    <div class="col-12">
                        <div class="text-center py-5">
                            <i class="bi bi-search text-muted" style="font-size: 4rem;"></i>
                            <h3 class="mt-3 text-muted">No vehicles found</h3>
                            <p class="text-muted">Try adjusting your filters or search criteria</p>
                        </div>
                    </div>
                }
            </div>

            <!-- Pagination -->
            <nav aria-label="Vehicle listings pagination" class="mt-4">
                <ul class="pagination justify-content-center">
                    <li class="page-item disabled">
                        <a class="page-link" href="#" tabindex="-1">Previous</a>
                    </li>
                    <li class="page-item active"><a class="page-link" href="#">1</a></li>
                    <li class="page-item"><a class="page-link" href="#">2</a></li>
                    <li class="page-item"><a class="page-link" href="#">3</a></li>
                    <li class="page-item">
                        <a class="page-link" href="#">Next</a>
                    </li>
                </ul>
            </nav>
        </div>
    </div>
</div>

@section Styles {
    <style>
        .hover-shadow {
            transition: box-shadow 0.3s ease-in-out, transform 0.2s ease-in-out;
        }
        .hover-shadow:hover {
            box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.15) !important;
            transform: translateY(-5px);
        }
        .object-fit-cover {
            object-fit: cover;
            object-position: center;
        }
        .transition {
            transition: all 0.3s ease;
        }
    </style>
}

@section Scripts {
    <script>
        // Auto-submit form on sort change
        document.getElementById('sortBy').addEventListener('change', function() {
            document.getElementById('filterForm').submit();
        });

        // Reset button handler
        document.querySelector('button[type="reset"]').addEventListener('click', function() {
            setTimeout(() => {
                window.location.href = '@Url.Action("Index", "Vehicles")';
            }, 100);
        });
    </script>
}
