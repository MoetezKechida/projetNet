@model projetNet.DTOs.Vehicle.VehicleResponse

@{
    ViewData["Title"] = $"{Model.Brand} {Model.Model} - {Model.Year}";
}

<div class="container mt-4">
    <!-- Breadcrumb -->
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-action="Index">Vehicles</a></li>
            <li class="breadcrumb-item active">@Model.Brand @Model.Model</li>
        </ol>
    </nav>

    <div class="row">
        <!-- Left Column - Images -->
        <div class="col-lg-7">
            <!-- Main Image -->
            <div class="card shadow-sm mb-3">
                <div class="card-body p-0">
                    @if (!string.IsNullOrEmpty(Model.ImageUrl))
                    {
                        <img src="@Model.ImageUrl" class="img-fluid w-100" alt="@Model.Brand @Model.Model" 
                             style="max-height: 500px; object-fit: contain;">
                    }
                    else
                    {
                        <div class="bg-light d-flex align-items-center justify-content-center" style="height: 500px;">
                            <i class="bi bi-car-front text-secondary" style="font-size: 6rem;"></i>
                        </div>
                    }
                </div>
            </div>

            <!-- Thumbnail Gallery (Placeholder for multiple images) -->
            <div class="row g-2">
                @for (int i = 0; i < 4; i++)
                {
                    <div class="col-3">
                        <div class="border rounded p-2 text-center bg-light" style="height: 80px;">
                            <i class="bi bi-image text-muted" style="font-size: 2rem;"></i>
                        </div>
                    </div>
                }
            </div>

            <!-- Vehicle Description -->
            <div class="card shadow-sm mt-4">
                <div class="card-header bg-white">
                    <h5 class="mb-0"><i class="bi bi-card-text"></i> Description</h5>
                </div>
                <div class="card-body">
                    <p class="mb-0">
                        @if (!string.IsNullOrEmpty(Model.Description))
                        {
                            @Model.Description
                        }
                        else
                        {
                            <span class="text-muted">No description available</span>
                        }
                    </p>
                </div>
            </div>

            <!-- Specifications -->
            <div class="card shadow-sm mt-4">
                <div class="card-header bg-white">
                    <h5 class="mb-0"><i class="bi bi-gear"></i> Specifications</h5>
                </div>
                <div class="card-body">
                    <div class="row g-3">
                        <div class="col-md-6">
                            <div class="d-flex justify-content-between border-bottom pb-2">
                                <span class="text-muted">Brand</span>
                                <strong>@Model.Brand</strong>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="d-flex justify-content-between border-bottom pb-2">
                                <span class="text-muted">Model</span>
                                <strong>@Model.Model</strong>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="d-flex justify-content-between border-bottom pb-2">
                                <span class="text-muted">Year</span>
                                <strong>@Model.Year</strong>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="d-flex justify-content-between border-bottom pb-2">
                                <span class="text-muted">Mileage</span>
                                <strong>@Model.Mileage.ToString("N0") km</strong>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="d-flex justify-content-between border-bottom pb-2">
                                <span class="text-muted">Location</span>
                                <strong>@Model.Location</strong>
                            </div>
                        </div>
                        @if (!string.IsNullOrEmpty(Model.Vin))
                        {
                            <div class="col-md-6">
                                <div class="d-flex justify-content-between border-bottom pb-2">
                                    <span class="text-muted">VIN</span>
                                    <strong class="text-break small">@Model.Vin</strong>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>

        <!-- Right Column - Details & Actions -->
        <div class="col-lg-5">
            <!-- Price Card -->
            <div class="card shadow-sm mb-3 sticky-top" style="top: 20px;">
                <div class="card-body">
                    <h2 class="card-title">@Model.Brand @Model.Model</h2>
                    <h3 class="text-primary mb-3">$@Model.Price.ToString("N0")</h3>

                    <div class="d-flex gap-2 mb-3">
                        <span class="badge bg-info">@Model.Year</span>
                        <span class="badge bg-secondary">@Model.Mileage.ToString("N0") km</span>
                        <span class="badge bg-success"><i class="bi bi-geo-alt"></i> @Model.Location</span>
                    </div>

                    <!-- Contact Seller -->
                    <button class="btn btn-primary btn-lg w-100 mb-2" data-bs-toggle="modal" data-bs-target="#contactModal">
                        <i class="bi bi-envelope"></i> Contact Seller
                    </button>

                    <!-- Save/Favorite -->
                    <button class="btn btn-outline-danger w-100 mb-2">
                        <i class="bi bi-heart"></i> Save to Favorites
                    </button>

                    <!-- Share -->
                    <div class="d-grid gap-2">
                        <button class="btn btn-outline-secondary" data-bs-toggle="modal" data-bs-target="#shareModal">
                            <i class="bi bi-share"></i> Share
                        </button>
                    </div>

                    <!-- Admin Actions -->
                    @if (User.IsInRole("Admin") || User.HasClaim("IsVerifiedSeller", "true"))
                    {
                        <hr class="my-3">
                        <div class="d-grid gap-2">
                            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">
                                <i class="bi bi-pencil"></i> Edit
                            </a>
                            <button class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#deleteModal">
                                <i class="bi bi-trash"></i> Delete
                            </button>
                        </div>
                    }
                </div>
            </div>

            <!-- Verification Status -->
            <div class="card shadow-sm mb-3">
                <div class="card-body">
                    <h6 class="card-title"><i class="bi bi-shield-check"></i> Verification Status</h6>
                    <ul class="list-unstyled mb-0">
                        <li class="mb-2">
                            <i class="bi bi-check-circle text-success"></i> Seller Verified
                        </li>
                        <li class="mb-2">
                            <i class="bi bi-x-circle text-muted"></i> Inspection Pending
                        </li>
                        <li>
                            <i class="bi bi-check-circle text-success"></i> Documents Verified
                        </li>
                    </ul>
                </div>
            </div>

            <!-- Safety Tips -->
            <div class="card shadow-sm border-warning">
                <div class="card-body">
                    <h6 class="card-title text-warning">
                        <i class="bi bi-exclamation-triangle"></i> Safety Tips
                    </h6>
                    <ul class="small mb-0">
                        <li>Meet in a public place</li>
                        <li>Inspect the vehicle thoroughly</li>
                        <li>Verify all documents</li>
                        <li>Never send money in advance</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>

    <!-- Reviews Section -->
    <div class="row mt-4">
        <div class="col-12">
            <div class="card shadow-sm">
                <div class="card-header bg-white">
                    <h5 class="mb-0"><i class="bi bi-star"></i> Reviews & Ratings</h5>
                </div>
                <div class="card-body">
                    <div class="text-center py-4">
                        <i class="bi bi-chat-square-text text-muted" style="font-size: 3rem;"></i>
                        <p class="text-muted mt-3">No reviews yet. Be the first to review!</p>
                        <button class="btn btn-primary">Write a Review</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Contact Seller Modal -->
<div class="modal fade" id="contactModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Contact Seller</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <form>
                    <div class="mb-3">
                        <label for="senderName" class="form-label">Your Name</label>
                        <input type="text" class="form-control" id="senderName" required>
                    </div>
                    <div class="mb-3">
                        <label for="senderEmail" class="form-label">Your Email</label>
                        <input type="email" class="form-control" id="senderEmail" required>
                    </div>
                    <div class="mb-3">
                        <label for="senderPhone" class="form-label">Your Phone</label>
                        <input type="tel" class="form-control" id="senderPhone">
                    </div>
                    <div class="mb-3">
                        <label for="message" class="form-label">Message</label>
                        <textarea class="form-control" id="message" rows="4" required></textarea>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary">Send Message</button>
            </div>
        </div>
    </div>
</div>

<!-- Share Modal -->
<div class="modal fade" id="shareModal" tabindex="-1">
    <div class="modal-dialog modal-sm">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Share Vehicle</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <div class="d-grid gap-2">
                    <button class="btn btn-primary"><i class="bi bi-facebook"></i> Facebook</button>
                    <button class="btn btn-info text-white"><i class="bi bi-twitter"></i> Twitter</button>
                    <button class="btn btn-success"><i class="bi bi-whatsapp"></i> WhatsApp</button>
                    <button class="btn btn-secondary" onclick="copyToClipboard()">
                        <i class="bi bi-link-45deg"></i> Copy Link
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Delete Confirmation Modal -->
<div class="modal fade" id="deleteModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header bg-danger text-white">
                <h5 class="modal-title">Confirm Deletion</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <p>Are you sure you want to delete this vehicle listing?</p>
                <p class="text-danger"><strong>This action cannot be undone.</strong></p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <form asp-action="Delete" asp-route-id="@Model.Id" method="post" class="d-inline">
                    @Html.AntiForgeryToken()
                    <button type="submit" class="btn btn-danger">Delete</button>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function copyToClipboard() {
            const url = window.location.href;
            navigator.clipboard.writeText(url).then(() => {
                alert('Link copied to clipboard!');
            });
        }
    </script>
}
