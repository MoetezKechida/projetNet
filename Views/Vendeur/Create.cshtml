@model projetNet.Models.Vehicle

@{
    ViewData["Title"] = "Create";
}

<h1 class="mb-4">Create Vehicle</h1>

<div class="card shadow-sm">
    <div class="card-body">
        <form asp-action="Create" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

            <div class="row g-3">
                <div class="col-md-6">
                    <label asp-for="Vin" class="form-label"></label>
                    <input asp-for="Vin" class="form-control" placeholder="Enter VIN" />
                    <span asp-validation-for="Vin" class="text-danger"></span>
                </div>

                <div class="col-md-6">
                    <label asp-for="Brand" class="form-label"></label>
                    <input asp-for="Brand" class="form-control" placeholder="Enter Brand" />
                    <span asp-validation-for="Brand" class="text-danger"></span>
                </div>

                <div class="col-md-6">
                    <label asp-for="Model" class="form-label"></label>
                    <input asp-for="Model" class="form-control" placeholder="Enter Model" />
                    <span asp-validation-for="Model" class="text-danger"></span>
                </div>

                <div class="col-md-6">
                    <label asp-for="Year" class="form-label"></label>
                    <input asp-for="Year" class="form-control" placeholder="Enter Year" />
                    <span asp-validation-for="Year" class="text-danger"></span>
                </div>

                <div class="col-md-6">
                    <label asp-for="Price" class="form-label"></label>
                    <input asp-for="Price" class="form-control" placeholder="Enter Price" />
                    <span asp-validation-for="Price" class="text-danger"></span>
                </div>

                <div class="col-md-6">
                    <label asp-for="RentalPrice" class="form-label"></label>
                    <input asp-for="RentalPrice" class="form-control" placeholder="Rental Price" readonly />
                    <span class="form-text text-muted">Automatically set to the same as Price</span>
                </div>

                <div class="col-md-6">
                    <label asp-for="Mileage" class="form-label"></label>
                    <input asp-for="Mileage" class="form-control" placeholder="Enter Mileage" />
                    <span asp-validation-for="Mileage" class="text-danger"></span>
                </div>

                <div class="col-md-6">
                    <label asp-for="Location" class="form-label"></label>
                    <input asp-for="Location" class="form-control" placeholder="Enter Location" />
                    <span asp-validation-for="Location" class="text-danger"></span>
                </div>

                <div class="col-12">
                    <label class="form-label">Vehicle Image</label>
                    <input type="file" name="ImageFile" class="form-control" accept="image/*" />
                </div>

                <div class="col-12">
                    <label asp-for="Description" class="form-label"></label>
                    <textarea asp-for="Description" class="form-control" rows="4" placeholder="Enter vehicle description"></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
            </div>

            <div class="mt-4 d-flex justify-content-between">
                <a asp-action="UserVehicle" class="btn btn-secondary">Back to List</a>
                <button type="submit" class="btn btn-primary">Create Vehicle</button>
            </div>
        </form>
    </div>
</div>
