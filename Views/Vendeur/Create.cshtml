@model projetNet.Models.Vehicle

@{
    ViewData["Title"] = "Create";
}

<h1 class="mb-4">Create Vehicle</h1>

<div class="card shadow-sm">
    <div class="card-body">
        <form asp-action="Create" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

            <div class="row g-3">
                <div class="col-md-6">
                    <label asp-for="Vin" class="form-label"></label>
                    <input asp-for="Vin" class="form-control" placeholder="Enter VIN" />
                    <span asp-validation-for="Vin" class="text-danger"></span>
                </div>

                <div class="col-md-6">
                    <label asp-for="Brand" class="form-label"></label>
                    <select asp-for="Brand" class="form-select" onchange="updateModels()">
                        @foreach (var brand in ViewBag.Brands as List<string>)
                        {
                            <option value="@brand">@brand</option>
                        }
                    </select>
                    <span asp-validation-for="Brand" class="text-danger"></span>
                </div>

                <div class="col-md-6">
                    <label asp-for="Model" class="form-label"></label>
                    <select asp-for="Model" class="form-select" id="modelSelect">
                    </select>
                    <span asp-validation-for="Model" class="text-danger"></span>
                </div>

                <div class="col-md-6">
                    <label asp-for="Year" class="form-label"></label>
                    <input asp-for="Year" class="form-control" placeholder="Enter Year" />
                    <span asp-validation-for="Year" class="text-danger"></span>
                </div>

                <div class="col-md-6">
                    <label asp-for="Price" class="form-label"></label>
                    <input asp-for="Price" class="form-control" placeholder="Enter Price" />
                    <span asp-validation-for="Price" class="text-danger"></span>
                </div>

                <div class="col-md-6">
                    <label asp-for="RentalPrice" class="form-label"></label>
                    <input asp-for="RentalPrice" class="form-control" placeholder="Rental Price" />
                    <span asp-validation-for="RentalPrice" class="text-danger"></span>
                </div>

                <div class="col-md-6">
                    <label asp-for="Mileage" class="form-label"></label>
                    <input asp-for="Mileage" class="form-control" placeholder="Enter Mileage" />
                    <span asp-validation-for="Mileage" class="text-danger"></span>
                </div>

                <div class="col-md-6">
                    <label asp-for="Location" class="form-label"></label>
                    <input asp-for="Location" class="form-control" placeholder="Enter Location" />
                    <span asp-validation-for="Location" class="text-danger"></span>
                </div>

                <div class="col-12">
                    <label class="form-label">Vehicle Image</label>
                    <input type="file" name="ImageFile" class="form-control" accept="image/*" required onchange="validateImage(this)" />
                </div>

                <div class="col-12">
                    <label asp-for="Description" class="form-label"></label>
                    <textarea asp-for="Description" class="form-control" rows="4" placeholder="Enter vehicle description"></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
            </div>

            <div class="mt-4 d-flex justify-content-between">
                <a asp-action="UserVehicle" class="btn btn-secondary">Back to List</a>
                <button type="submit" class="btn btn-primary">Add Vehicle</button>
            </div>
        </form>
    </div>
</div>

<script>
function validateImage(input) {
    const file = input.files[0];
    if (file) {
        const allowedTypes = ['image/jpeg', 'image/png', 'image/gif', 'image/webp'];
        if (!allowedTypes.includes(file.type)) {
            alert('Only image files (jpg, png, gif, webp) are allowed.');
            input.value = ''; // reset the input
        }
    }
}
</script>

<script>
    const brandsWithModels = @Html.Raw(System.Text.Json.JsonSerializer.Serialize(projetNet.Helpers.VehicleData.BrandsWithModels));

    function updateModels() {
        const brandSelect = document.getElementById("Brand");
        const modelSelect = document.getElementById("modelSelect");

        const selectedBrand = brandSelect.value;

        modelSelect.innerHTML = '';

        if (brandsWithModels[selectedBrand]) {
            brandsWithModels[selectedBrand].forEach((model, index) => {
                const option = document.createElement("option");
                option.value = model;
                option.text = model;

                // select first model automatically
                if (index === 0) {
                    option.selected = true;
                }

                modelSelect.appendChild(option);
            });
        }
    }

    // Load models automatically when page loads
    document.addEventListener("DOMContentLoaded", function () {
        updateModels();
    });
</script>





