@model IEnumerable<projetNet.Models.Vehicle>

@{
    ViewData["Title"] = "Vehicles";
    var statuses = ViewBag.Statuses as List<string>;
    var selectedStatus = ViewBag.SelectedStatus as string;
}

<h1 class="mb-4">Vehicles</h1>



<div class="mb-3 d-flex align-items-center justify-content-between">
    <a asp-action="Create" class="btn btn-primary">Add New Vehicle</a>

    <div class="ms-auto">
        <label class="form-label fw-bold me-2">Filter by status:</label>
        <select class="form-select d-inline-block w-auto" onchange="filterByStatus(this)">
            <option value="" selected="@string.IsNullOrEmpty(selectedStatus)">All</option>
            @foreach (var status in statuses)
            {
                <option value="@status" selected="@(status == selectedStatus)">@(status)</option>
            }
        </select>
    </div>
</div>
@if (!Model.Any())
{
    <div class="alert alert-info">
        you have no vehicles.
    </div>
}
else
{
    <div class="row row-cols-1 row-cols-md-2 g-4">
        @foreach (var item in Model)
        {
            <div class="col">
                <div class="card shadow-sm h-100">
                    @if (!string.IsNullOrEmpty(item.Status))
                    {
                        var badgeColor = item.Status.ToLower() switch
                        {
                            "pending" => "bg-warning text-dark",
                            "accepted" => "bg-success text-white",
                            "declined" => "bg-danger text-white",
                            
                        };
                        <span class="badge position-absolute top-0 start-0 m-2 @badgeColor" style="font-size:0.8rem;">
                            @item.Status
                        </span>
                    }
                    
                    @if (!string.IsNullOrEmpty(item.ImageUrl))
                    {
                        <img src="@item.ImageUrl" class="card-img" alt="Vehicle Image"
                             style="object-fit: contain; width: 100%; height: 100%; background-color: #f8f9fa;">
                    }
                    <div class="card-body">
                        <h5 class="card-title">@item.Brand @item.Model (@item.Year)</h5>
                        <p class="card-text">
                            <strong>VIN:</strong> @item.Vin <br/>
                            @if (item.Price != null)
                            {
                                <strong>Price: @item.Price.Value.ToString("0.##") Dt</strong>
                                <br/>
                            }

                            @if (item.RentalPrice != null)
                            {
                                <strong>Rental Price: @item.RentalPrice.Value.ToString("0.##") Dt </strong>
                                <br/>
                            }
                            <strong>Mileage:</strong> @item.Mileage km<br/>
                            <strong>Location:</strong> @item.Location <br/>
                            
                            <strong>Description:</strong> @item.Description
                        </p>
                    </div>
                    <div class="card-footer d-flex justify-content-between">
                        <div>
                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning">Edit</a>
                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">Delete</a>
                            @if (item.Status == "declined")
                            {
                                <a asp-action="Reason" asp-route-id="@item.Id" class="btn btn-sm btn-danger">reason</a>
                            }
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
}
@section Scripts {
    <script>
        function filterByStatus(select) {
            const status = select.value;
            const url = status ? `@Url.Action("UserVehicle")?status=${status}` : '@Url.Action("UserVehicle")';
            window.location.href = url;
        }
    </script>
}