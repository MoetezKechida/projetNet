@model IEnumerable<projetNet.Models.Vehicle>

@{
    ViewData["Title"] = "Vehicles";
}

<h1 class="mb-4">Vehicles</h1>

<div class="mb-3">
    <a asp-action="Create" class="btn btn-primary">Add New Vehicle</a>
</div>

<div class="row row-cols-1 row-cols-md-2 g-4">
    @foreach (var item in Model)
    {
        <div class="col">
            <div class="card shadow-sm h-100">
                @if (!string.IsNullOrEmpty(item.ImageUrl))
                {
                    <img src="@item.ImageUrl" class="card-img-top" alt="Vehicle Image" style="object-fit: cover; height: 200px;">
                }
                <div class="card-body">
                    <h5 class="card-title">@item.Brand @item.Model (@item.Year)</h5>
                    <p class="card-text">
                        <strong>VIN:</strong> @item.Vin <br />
                        <strong>Price:</strong> @item.Price?.ToString("0.##") Dt <br />
                        <strong>Rental Price:</strong> @item.RentalPrice?.ToString("0.##") Dt <br />
                        <strong>Mileage:</strong> @item.Mileage <br />
                        <strong>Location:</strong> @item.Location <br />
                        <strong>Status:</strong> @item.Status <br />
                        <strong>Description:</strong> @item.Description
                    </p>
                </div>
                <div class="card-footer d-flex justify-content-between">
                    <div>
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning">Edit</a>
                        
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">Delete</a>
                    </div>
                </div>
            </div>
        </div>
    }
</div>