@model projetNet.Models.Vehicle

@{
    ViewData["Title"] = "Delete";
}

<h1 class="mb-4">Delete Vehicle</h1>

<h3 class="text-danger">Are you sure you want to delete this vehicle?</h3>

<div class="card shadow-sm mb-3">
    @if (!string.IsNullOrEmpty(Model.ImageUrl))
    {
        <img src="@Model.ImageUrl" class="card-img-top" style="object-fit: cover; max-height: 250px;" alt="Vehicle Image" />
    }
    <div class="card-body">
        <h5 class="card-title">@Model.Brand @Model.Model (@Model.Year)</h5>
        <p class="card-text">
            <strong>VIN:</strong> @Model.Vin <br />
            <strong>Price:</strong> @Model.Price?.ToString("0.##") Dt <br />
            <strong>Rental Price:</strong> @Model.RentalPrice?.ToString("0.##") Dt <br />
            <strong>Mileage:</strong> @Model.Mileage <br />
            <strong>Location:</strong> @Model.Location <br />
            <strong>Description:</strong> @Model.Description
        </p>
    </div>
</div>

<form asp-action="Delete">
    <input type="hidden" asp-for="Id" />
    <div class="d-flex justify-content-between">
        <input type="submit" value="Delete" class="btn btn-danger" />
        <a asp-action="UserVehicle" class="btn btn-secondary">Back to List</a>
    </div>
</form>