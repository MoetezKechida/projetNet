@model projetNet.Models.Offer
@{
    ViewData["Title"] = "Delete Offer";
}
<h2>Delete Offer</h2>
<form asp-action="DeleteConfirmed" method="post">
    <input type="hidden" asp-for="Id" />
    <div class="mb-3">
        <label>Type</label>
        <input asp-for="Type" class="form-control" disabled />
    </div>
    <div class="mb-3">
        <label>Price</label>
        <input asp-for="Price" class="form-control" disabled />
    </div>
    <div class="mb-3">
        <label>Status</label>
        <input asp-for="Status" class="form-control" disabled />
    </div>
    <div class="mb-3">
        <label>Vehicle</label>
        <input asp-for="VehicleId" class="form-control" disabled />
    </div>
    <button type="submit" class="btn btn-danger">Delete</button>
    <a href="@Url.Action("Index", "Profile")" class="btn btn-secondary">Cancel</a>
</form>
