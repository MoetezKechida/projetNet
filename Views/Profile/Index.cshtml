@model IEnumerable<projetNet.Models.Offer>
@{
    ViewData["Title"] = "My Offers";
}
<h2>My Offers</h2>
<a href="@Url.Action("Create", "Profile")" class="btn btn-success mb-2">Create New Offer</a>
<table class="table table-bordered">
    <thead>
        <tr>
            <th>Vehicle</th>
            <th>Type</th>
            <th>Status</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var offer in Model)
        {
            <tr>
                <td>@offer.VehicleId</td>
                <td>@offer.Type</td>
                <td>@offer.Status</td>
                <td>
                    <a href="@Url.Action("OfferDetails", "Profile", new { id = offer.Id })" class="btn btn-info btn-sm">View Details</a>
                    <a href="@Url.Action("Edit", "Profile", new { id = offer.Id })" class="btn btn-warning btn-sm">Edit</a>
                    <a href="@Url.Action("Delete", "Profile", new { id = offer.Id })" class="btn btn-danger btn-sm">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
