@model IEnumerable<projetNet.Models.BookingDetailsViewModel>

@{
    ViewData["Title"] = "Booking Requests";
}

<div class="container py-4">

    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="fw-bold mb-0">Booking Requests</h2>
            <small class="text-muted">Buyers interested in your vehicles</small>
        </div>
        <a asp-controller="Vendeur" asp-action="UserVehicle" class="btn btn-outline-secondary">
            Back to Vehicles
        </a>
    </div>

    @if (!Model.Any())
    {
        <div class="card shadow-sm border-0">
            <div class="card-body text-center py-5">
                <h5>No booking requests yet</h5>
                <p class="text-muted mb-0">When buyers request your vehicles, they will appear here.</p>
            </div>
        </div>
    }
    else
    {
        <div class="card shadow-sm border-0">
            <div class="card-body p-0">

                <div class="table-responsive">
                    <table class="table table-hover align-middle mb-0">

                        <thead class="table-light">
                            <tr>
                                <th>Vehicle</th>
                                <th>Buyer</th>
                                <th>Type</th>
                                <th>Period</th>
                                <th>Total</th>
                                <th class="text-end">Action</th>
                            </tr>
                        </thead>

                        <tbody>
                        @foreach (var item in Model)
                        {
                            var booking = item.Booking;
                            var vehicle = item.Vehicle;
                            var buyer = item.User;

                            <tr>
                                <td>
                                    <div class="fw-semibold">
                                        @vehicle.Brand @vehicle.Model
                                    </div>
                                </td>

                                <td>
                                    <span class="fw-semibold">@buyer.FirstName @buyer.LastName</span><br/>
                                    <small class="text-muted">@buyer.Email</small><br/>
                                    <small class="text-muted">@buyer.PhoneNumber</small>
                                </td>

                                <td>
                                    <span class="badge bg-@(booking.BookingType == "Buy" ? "primary" : "success") px-3 py-2">
                                        @booking.BookingType
                                    </span>
                                </td>

                                <td>
                                    @if (booking.BookingType == "Rent")
                                    {
                                        <small class="text-muted">
                                            @booking.StartDate.ToString("dd MMM yyyy")
                                            →
                                            @booking.EndDate.ToString("dd MMM yyyy")
                                        </small>
                                    }
                                    else
                                    {
                                        <span class="text-muted">One-time purchase</span>
                                    }
                                </td>

                                <td>
                                    <span class="fw-bold text-success">
                                        @booking.TotalAmount.ToString("F2") €
                                    </span>
                                </td>

                                <td class="text-end">
                                    <form asp-action="CompleteTransaction"
                                          asp-route-id="@booking.Id"
                                          method="post"
                                          onsubmit="return confirm('Are you sure you want to complete this transaction? This action cannot be undone.');">

                                        @Html.AntiForgeryToken()

                                        <button type="submit" class="btn btn-sm btn-dark">
                                            Complete Transaction
                                        </button>
                                    </form>
                                </td>
                            </tr>
                        }
                        </tbody>

                    </table>
                </div>

            </div>
        </div>
    }
</div>
