@model IEnumerable<projetNet.Models.BookingDetailsViewModel>

@{
    ViewData["Title"] = "My Bookings";
}

<div class="container py-4">

    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="fw-bold mb-0">My Booking Requests</h2>
            <small class="text-muted">Track your vehicle purchases and rentals</small>
        </div>
        <a asp-controller="VehicleListing" asp-action="Index" class="btn btn-primary">
            Browse Vehicles
        </a>
    </div>

    @if (!Model.Any())
    {
        <div class="card shadow-sm border-0">
            <div class="card-body text-center py-5">
                <h5>You haven't made any bookings yet</h5>
                <p class="text-muted">Start exploring vehicles and make your first booking.</p>
                
            </div>
        </div>
    }
    else
    {
        <div class="card shadow-sm border-0">
            <div class="card-body p-0">

                <div class="table-responsive">
                    <table class="table table-hover align-middle mb-0">

                        <thead class="table-light">
                            <tr>
                                <th>Vehicle</th>
                                <th>Seller</th>
                                <th>Type</th>
                                <th>Period</th>
                                <th>Total</th>
                                
                            </tr>
                        </thead>

                        <tbody>
                        @foreach (var item in Model)
                        {
                            var booking = item.Booking;
                            var vehicle = item.Vehicle;
                            var seller = item.User;

                            <tr>
                                <td>
                                    <div class="fw-semibold">
                                        @vehicle.Brand @vehicle.Model
                                    </div>
                                    
                                </td>

                                <td>
                                    <div class="fw-semibold">
                                        @seller.FirstName @seller.LastName
                                    </div>
                                    <small class="text-muted">@seller.Email</small>
                                    <small class="text-muted">@seller.PhoneNumber</small>
                                </td>

                                <td>
                                    <span class="badge bg-@(booking.BookingType == "Buy" ? "primary" : "success") px-3 py-2">
                                        @booking.BookingType
                                    </span>
                                </td>

                                <td>
                                    @if (booking.BookingType == "Rent")
                                    {
                                        <small class="text-muted">
                                            @booking.StartDate.ToString("dd MMM yyyy")
                                            →
                                            @booking.EndDate.ToString("dd MMM yyyy")
                                        </small>
                                    }
                                    else
                                    {
                                        <span class="text-muted">One-time purchase</span>
                                    }
                                </td>

                                <td>
                                    <span class="fw-bold text-success">
                                        @booking.TotalAmount.ToString("F2") €
                                    </span>
                                </td>

                                
                            </tr>
                        }
                        </tbody>

                    </table>
                </div>

            </div>
        </div>
    }

    

</div>
